# ============================================
# TASTE Platform - Environment Variables
# ============================================

# Copy this file to .env.local and fill in your values

# ============================================
# API Configuration
# ============================================
VITE_API_URL=http://localhost:3000/api
VITE_CDN_URL=https://cdn.taste.stream

# ============================================
# Supabase Configuration
# ============================================
# Get these from: https://supabase.com/dashboard/project/_/settings/api
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# ============================================
# Payment Gateway (Stripe)
# ============================================
# Get from: https://dashboard.stripe.com/apikeys
VITE_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key

# ============================================
# Video Streaming (Mux)
# ============================================
# Get from: https://dashboard.mux.com/
VITE_MUX_TOKEN_ID=your_mux_token_id
VITE_MUX_TOKEN_SECRET=your_mux_token_secret

# ============================================
# TMDB (The Movie Database)
# ============================================
# Get your API key from: https://www.themoviedb.org/settings/api
# Used for fetching accurate movie/TV show metadata, posters, and backdrops
VITE_TMDB_API_KEY=your_tmdb_api_key

# ============================================
# AI Services
# ============================================
# OpenAI for joke explanations
VITE_OPENAI_API_KEY=your_openai_api_key

# Or use Anthropic Claude
VITE_ANTHROPIC_API_KEY=your_anthropic_api_key

# ============================================
# Analytics
# ============================================
# Google Analytics
VITE_GA_TRACKING_ID=UA-XXXXXXXXX-X

# Mixpanel
VITE_MIXPANEL_TOKEN=your_mixpanel_token

# PostHog
VITE_POSTHOG_KEY=your_posthog_key
VITE_POSTHOG_HOST=https://app.posthog.com

# ============================================
# Social Media
# ============================================
# Twitter API (for sharing)
VITE_TWITTER_API_KEY=your_twitter_api_key

# ============================================
# Environment
# ============================================
VITE_ENVIRONMENT=development # development | staging | production

# ============================================
# Feature Flags
# ============================================
VITE_ENABLE_AI_FEATURES=true
VITE_ENABLE_CLIPS=true
VITE_ENABLE_WATCH_PARTIES=true
VITE_ENABLE_TV_MODE=true
VITE_ENABLE_ADS=false

# ============================================
# Regional Settings
# ============================================
VITE_DEFAULT_LOCALE=en
VITE_DEFAULT_CURRENCY=USD
VITE_DEFAULT_TIMEZONE=America/New_York

# ============================================
# Performance
# ============================================
VITE_CACHE_TTL=300000 # 5 minutes in milliseconds
VITE_MAX_CACHE_SIZE=50 # MB
